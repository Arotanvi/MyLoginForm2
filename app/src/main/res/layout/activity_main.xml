<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff9602"
    tools:context="com.codingblocks.myloginform2.MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        app:srcCompat="@android:drawable/star_big_on" />

    <EditText
        android:id="@+id/Code"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:background="#98ff02"
        android:ems="10"
        android:hint="Enter code here."
        android:inputType="textPersonName"
        android:text="Code"
        android:textColor="#1f1e1e" />

    <EditText
        android:id="@+id/Password"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/Code"
        android:layout_alignStart="@+id/Code"
        android:layout_below="@+id/Code"
        android:layout_marginTop="30dp"
        android:background="#98ff02"
        android:ems="10"
        android:hint="Enter Password here."
        android:inputType="textPassword"
        android:textColor="#1f1e1e" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_below="@+id/Password"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@+id/OR"
        android:layout_toStartOf="@+id/OR">

        <RelativeLayout
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:background="@color/colorAccent">

            <Button
                android:id="@+id/Login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@color/colorAccent"
                android:text="LOGIN"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <TextView
        android:id="@+id/OR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardView"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:layout_toLeftOf="@+id/Register_Here"
        android:layout_toStartOf="@+id/Register_Here"
        android:text="OR"
        android:textColor="#1f1e1e"
        android:textSize="34sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/other_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imageView"
        android:layout_alignRight="@+id/imageView"
        android:layout_below="@+id/OR"
        android:layout_marginTop="14dp"
        android:text="Other Options"
        android:textStyle="bold" />

    <Button
        android:id="@+id/Register_Here"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/OR"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        android:background="@color/colorAccent"
        android:text="SIGN UP"
        android:textSize="24sp"
        android:textStyle="bold" />


</RelativeLayout>
